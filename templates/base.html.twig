<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Urlshort - Dashboard{% endblock %}</title>
        {% block stylesheets %}

            <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/css/app.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/css/fonts.css') }}">

        {% endblock %}
    </head>
        {% block body %}

            <header>
                <div class="container">
                    <div class="row">
                        <div class="col-12 text-center menu-home">
                            <nav class="navbar navbar-expand-lg">
                                <a class="navbar-brand" href="{{ path('home') }}">Urlshort</a>
                                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                                    <span class="navbar-toggler-icon"></span>
                                </button>
                                <div class="collapse navbar-collapse" id="navbarNav">
                                    <ul class="navbar-nav ml-auto">
                                        <li class="nav-item dropdown">
                                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                Ordenar por
                                            </a>
                                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                                <a class="dropdown-item {% if app.request.get('_route') == 'home' %} active {% endif %}" href="{{ path('home') }}">Más visitas totales</a>
                                                <a class="dropdown-item" href="">Más visitas en la última hora</a>
                                                <a class="dropdown-item" href="">Ranking de URLs más visitadas por dispositivo</a>
                                            </div>
                                        </li>
                                        <li class="nav-item">
                                            {% if app.user %}
                                                <a class="nav-link" href="{{ path('dashboard') }}">Dashboard</a>
                                            {% else %}
                                                <a class="nav-link" href="{{ path('app_login') }}">Acceder</a>
                                            {% endif %}
                                        </li>
                                    </ul>
                                </div>
                                </div>
                            </nav>
                        </div>
                    </div>
                </div>
            </header>

        {% endblock %}

        {% block javascripts %}

        <script src="{{ asset('assets/js/jquery-2.0.0.min.js') }}"></script>
        <script src="{{ asset('assets/js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('assets/js/app.js') }}"></script>

        {% endblock %}
    </body>
</html>
