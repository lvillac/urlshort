{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}{% endblock %}

{% block body %}
    <header class="header-dashboard">
        <div class="container">
            <div class="row">
                <div class="col-12 menu">
                    <nav class="navbar navbar-expand-lg">
                        <a class="navbar-brand" href="{{ path('dashboard') }}">Dashboard</a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNav">
                            <ul class="navbar-nav ml-auto">
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('home') }}">Home</a>
                                </li>
                                <li class="nav-item active">
                                    <a class="nav-link" href="{{ path('RegistrarUrl') }}">Acortar url</a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Hola {{ user }}
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <a class="dropdown-item" href="{{ path('app_logout') }}">Desconectar</a>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </header>


    <section class="wrapper-dashboard">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    <h1>Urls creadas</h1>
                </div>
                <table class="table table-striped">
                    <thead>
                    <tr class="d-flex">
                        {# sorting of properties based on query components #}
                        <th scope="col" class="col-5">URL</th>
                        <th scope="col" class="col-3">
                            URL corta
                        </th>
                        <th scope="col" class="col-1 text-center">
                            Cliks
                        </th>
                        <th scope="col" class="col-3 text-center">
                            Fecha creaci√≥n
                        </th>
                    </tr>
                    </thead>

                    {# table body #}
                    <tbody>
                    {% for article in pagination %}
                        <tr class="{% if loop.index is odd %}color{% endif %} d-flex">
                            <td class="col-5">{{ article.url }}</td>
                            <td class="col-3">{{ article.url_corta }}</td>
                            <td class="col-1 text-center">{{ article.clicks }}</td>
                            <td class="col-3 text-center">{{ article.fecha_creacion | date('Y-m-d h:m:s') }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="row">
                <div class="col-12 text-center">
                    {# display navigation #}
                    <div class="navigation">
                        {{ knp_pagination_render(pagination) }}
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
